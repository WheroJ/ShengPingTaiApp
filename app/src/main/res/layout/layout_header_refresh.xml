<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/refreshLinearLayout_rlContent"
    android:layout_width="match_parent"
    android:layout_height="@dimen/col_height"
    android:background="@color/main_blue">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/refreshLinearLayout_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@mipmap/icon_net_error" />

        <TextView
            android:id="@+id/refreshLinearLayout_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/col_height"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center"
            android:text="hahahah"
            android:textColor="@color/main_blue"/>
    </LinearLayout>
</RelativeLayout>