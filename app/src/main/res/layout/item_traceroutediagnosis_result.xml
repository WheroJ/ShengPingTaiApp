<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_130"
    android:orientation="vertical"
    android:background="@color/gray_f2">

    <LinearLayout
        android:layout_marginTop="@dimen/dp_16"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_tv_hopHost"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text=""
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/gray_deep"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/errorcode"
            android:gravity="center"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/main_red"/>
        <TextView
            android:id="@+id/item_tv_hopErrorCode"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=""
            android:gravity="center"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/main_red"/>
    </LinearLayout>

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_width="@dimen/dp_80"
            android:layout_height="match_parent"
            android:text="@string/macaddress"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/gray_light"/>
        <TextView
            android:id="@+id/item_tv_hopHostAddress"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text=""
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/gray_light"/>
    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_width="@dimen/dp_80"
            android:layout_height="match_parent"
            android:text="@string/roundtriptime"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/gray_light"/>
        <TextView
            android:id="@+id/item_tv_hopRTTimes"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text=""
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/gray_light"/>
    </LinearLayout>

</LinearLayout>
