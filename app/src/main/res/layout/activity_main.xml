<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start">

    <LinearLayout
        android:id="@+id/right"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="@dimen/dp_50"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_130"
            android:orientation="vertical">
            <TextView
                android:id="@+id/menu_username"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingBottom="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_20"
                android:text="管理员"
                android:gravity="bottom"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/gray_light"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/menu_userphone"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingTop="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_20"
                android:text="13389768576"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/gray_deep"
                />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/menu_transactiondata"
            android:background="@drawable/selector_gray_liner_menu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_70"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@mipmap/icon_transactiondata"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_weight="1"
                android:textColor="@color/gray_deep"
                android:textSize="@dimen/sp_16"
                android:text="@string/str_transactiondata"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/menu_platformmonitoring"
            android:background="@drawable/selector_gray_liner_menu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_70"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@mipmap/icon_platformm"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_weight="1"
                android:textColor="@color/gray_deep"
                android:textSize="@dimen/sp_16"
                android:text="@string/str_platformmoitoring" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/menu_workorder"
            android:background="@drawable/selector_gray_liner_menu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_70"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@mipmap/icon_workorder"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_weight="1"
                android:textColor="@color/gray_deep"
                android:textSize="@dimen/sp_16"
                android:text="@string/str_workorder"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/menu_gatewayadministration"
            android:background="@drawable/selector_gray_liner_menu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_70"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@mipmap/icon_gatewayadm"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_weight="1"
                android:textColor="@color/gray_deep"
                android:textSize="@dimen/sp_16"
                android:text="@string/str_gatewayadministration"/>
        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></View>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/deep_line"></View>
        <LinearLayout
            android:id="@+id/menu_lin_setting"
            android:background="@drawable/selector_gray_liner_menu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_70"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/menu_setting"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@mipmap/icon_setting"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_weight="1"
                android:textColor="@color/gray_deep"
                android:textSize="@dimen/sp_16"
                android:text="@string/str_setting"/>
        </LinearLayout>
    </LinearLayout>


</android.support.v4.widget.DrawerLayout>
