<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_15"
        android:background="@color/gray_f2" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/col_height"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:orientation="horizontal">

        <View
            android:layout_width="5dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/radius_yellow_bar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/col_height"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:textColor="@color/gray_deep"
            android:textSize="@dimen/sp_15"
            android:text="@string/app_bind_account" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/light_line" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragmentTransactionData_rvBindings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_12" />
</LinearLayout>